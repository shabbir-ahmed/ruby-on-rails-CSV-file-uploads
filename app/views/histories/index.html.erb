
<div class="container">
    <h1>CSV Import</h1>
    <%= form_tag import_histories_path, multipart: true do %>
        <%= file_field_tag :file %>
        <%= submit_tag "Import"%>
    <% end %>
    <br />
    <table class="table-bordered">
        <thead>
            <th>URL</th>
            <th>Title</th>
            <th>Last Visit Time</th>
        </thead>

        <tbody>
            <% @history.each do |h| %>
                <tr>
                    <td><%= h.url %></td>
                    <td><%= h.title %></td>
                    <td><%= Time.zone.at(h.last_visit_time.to_i) %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <%= will_paginate  @history %>
</div>
